<!-- registration -->

<section class="registration">
	<div class="container">
		<div class="registration__inner">
			<form class="form" action="">
				<h4 class="registrationForm__title">Your Name</h4>
				<input class="registration__input" type="text" placeholder="First Name">
				<input class="registration__input" type="text" placeholder="Last Name">

				<div class="radio">
					<p class="radio__item"><input class="custom__radio" type="radio"  name="gender">Male</p>
	   			<p class="radio__item"><input class="custom__radio" type="radio"  name="gender">Female</p>
	   			<p class="radio__item"><input class="custom__radio" type="radio"  name="gender">Other</p>
   			</div>
				
				<h4 class="registrationForm__title">Login details</h4>
				<input class="registration__input" type="text" placeholder="Email">
				<input class="registration__input" type="text" placeholder="Password">
				<p class="form__text">Please use 8 or more characters, with at least 1 number and a mixture of uppercase and lowercase letters</p>
				<button type="submit" class="input__btn">JOIN NOW <span class="span__btn"></span></button>
			</form>

			<div class="registration__content">
				<h4 class="registration__title">LOYALTY HAS ITS PERKS</h4>
				<p class="registration__text">Get in on the loyalty program where you can earn points and unlock serious perks. Starting with these as soon as you join:</p>
				<ul class="registration__list">
					<li class="li__item">15% off welcome offer</li>
					<li class="li__item">Free shipping, returns and exchanges on all orders</li>
					<li class="li__item">$10 off a purchase on your birthday</li>
					<li class="li__item">Early access to products</li>
					<li class="li__item" >Exclusive offers & rewards</li>
				</ul>

			</div>
		</div>
	</div>
</section>

